<h1>Tasks index</h1>
<p><%= notice %></p>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.label :task_name, "Task name:" %>
  <%= form.text_field :task_name %>
  <%= form.label :status, "Status" %>
  <%= form.select :status, options_for_select([[''],['unstarted'], ['in progress'], ['completed']])%>
  <%= form.submit value: "search" %>
<% end %>

<br>
<p><%= link_to "sort by end deadline", tasks_path(sort_expired: "true") , value: "dater"%> ||
  <%= link_to "sort by priority", tasks_path(sort_priority: "true") %>
</p>
<table>
  <tr>
    <th>Task Name</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Status</th>
    <th>Deadline</th>
  </tr>
<% @tasks.each do |task| %>
  <tr >
    <td class="task_row"><%= task.task_name %></td>
    <td><%= task.description %></td>
    <td class="priority_row"><%= task.priority %></td>
    <td><%= task.status %></td>
    <td class="deadline_row"><%= task.deadline %></td>
    <td><%= link_to 'See details', task_path(task.id) %></td>
    <td><%= link_to "Modifier", edit_task_path(task.id) %></td>
    <td><%= link_to 'Supprimer', task_path(task.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<br>
<h2>List of words converted by i18n</h2>
Task: <%= t('view.task') %> <br>
User: <%= t('view.user') %> <br>
Attributes: <%= t('view.attributes') %> <br>
Content: <%= t('view.content') %> <br>
Priority: <%= t('view.priority') %> <br>
<br>

